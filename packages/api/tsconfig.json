{
  "compilerOptions": {
    "lib": ["es2020", "esnext", "es5", "es2015", "es2016"],
    "types": ["node"],
    "esModuleInterop": true,
    "rootDir": "./lib",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "lib/*": ["./lib/*"],
      "types/*": ["./lib/types/*"],
      "errors/*": ["./lib/errors/*"],
      "utils/*": ["./lib/utils/*"]
    }
  },
  "exclude": ["node_modules", ".vscode/**/*", ".idea/**/*", "dist", "tests"],
  "include": ["./lib/**/*"]
}
